<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Web3 Metamask Login</title>
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
    <title>Document</title>
</head>

<body>
    
    <nav>
        <h4>Node MySQL </h4>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/login">Login</a></li>
            <li><a href="/register">Register</a></li>
        </ul>
    </nav>


    <div class="container.mt-4">
        <div class="card">
            <div class="card-header">
                Resgister card
            </div>

            <div class="card-body">
                <form action="/auth/register" method ="POST">
                    <div class="form-group">
                        <label for="name">Name </label>
                        <input type="text" class="form-control" id="name" name="name">
                    </div>

                    <div class="form-group">
                        <label for="email">Email address</label>
                        <input type="email" class="form-control" id="email" name="email">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password">
                    </div>

                     <div class="form-group">
                        <label for="passwordConfirm">passwordConfirm</label>
                        <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm">
                    </div>
                      
                      
                      <div class="form-group">
                        <label for="hash_value">hash_value</label>
                        <input type="text" class="form-control" id="hash_value" name="hash_value">
                    </div>
                      
                    <button type="submit" class="btn btn-primary"> Register User </button>

                </form>


            </div>
        </div>
        {{#if message}}
        <h4 class="alert alert-danger mt-4">{{message}}</h4>

        {{/if}}
        <div class="flex-col space-y-2 justify-center items-center">
    <button id='loginButton' onclick="metamask()" class="mx-auto rounded-md p-2 bg-purple-500 text-white">
      Login with MetaMask
    </button>
    <p id='userWallet' class='text-lg text-gray-600 my-2'></p>
  </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous">

        
        </script>
        <script>
            function metamask(){
            alert('yes');
            toggleButton();
            }
            window.userWalletAddress = null
    const loginButton = document.getElementById('loginButton')
    const userWallet = document.getElementById('userWallet')
    const hash_value= document.getElementById('hash_value')
   // $('#hash_value').val(userWallet);
    function toggleButton() {
        console.log('sejal');
      if (!window.ethereum) {
        loginButton.innerText = 'MetaMask is not installed'
        loginButton.classList.remove('bg-purple-500', 'text-white')
        loginButton.classList.add('bg-gray-500', 'text-gray-100', 'cursor-not-allowed')
        return false
      }

    
     //loginButton.addEventListener('click', loginWithMetaMask)
     loginWithMetaMask();
    }
    async function loginWithMetaMask() {
      
      const accounts = await window.ethereum.request({ method: 'eth_requestAccounts' })
        .catch((e) => {
          console.error(e.message)
          return
        })
      if (!accounts) { return }

      window.userWalletAddress = accounts[0]
      userWallet.innerText = window.userWalletAddress
      hash_value.innerText = window.userWalletAddress
      //$('#hash_value').val(window.userWalletAddress);
      loginButton.innerText = 'Sign out of MetaMask'

      loginButton.removeEventListener('click', loginWithMetaMask)
      setTimeout(() => {
        loginButton.addEventListener('click', signOutOfMetaMask)
     
     }, 200)
    //signOutOfMetaMask();
    }
    
    function signOutOfMetaMask() {
      window.userWalletAddress = null
      userWallet.innerText = ''
      loginButton.innerText = 'Sign in with MetaMask'

      loginButton.removeEventListener('click', signOutOfMetaMask)
      setTimeout(() => {
        loginButton.addEventListener('click', loginWithMetaMask)
      }, 200)
    }
        window.addEventListener('DOMContentLoaded', () => {
        toggleButton();
       });
        </script>
</body>

</html>